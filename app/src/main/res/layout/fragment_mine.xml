<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mine_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_h"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="@color/white"
        android:textSize="@dimen/text_huge" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:visibility="gone" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <com.jetcloud.hgbw.view.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/drink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="大长今"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_huge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_huge" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/text_bighuge"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_huge" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/takefood"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dingcan" />
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订餐/取餐须知"
                android:textColor="@color/black"
                android:textSize="@dimen/text_huge"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aboutus"
                />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/myorder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:gravity="center"
            android:layout_marginBottom="1dp"
        
            android:background="@drawable/click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mineorder" />
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textColor="@color/black"
                android:textSize="@dimen/text_huge"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aboutus"
                />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/myticket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:gravity="center"
            android:layout_marginBottom="1dp"
        
            android:background="@drawable/click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/myticket" />
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的卡券"
                android:textColor="@color/black"
                android:textSize="@dimen/text_huge"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aboutus"
                />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/mypoint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:gravity="center"
            android:layout_marginBottom="1dp"
        
            android:background="@drawable/click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mypoint" />
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textColor="@color/black"
                android:textSize="@dimen/text_huge"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aboutus"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mymoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:gravity="center"
            android:layout_marginBottom="1dp"
        
            android:background="@drawable/click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mymoney" />
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的钱包"
                android:textColor="@color/black"
                android:textSize="@dimen/text_huge"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aboutus"
                />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/line"
            />
        <LinearLayout
             android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:gravity="center"
            
        	
            android:background="@drawable/click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aboutus" />
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textColor="@color/black"
                android:textSize="@dimen/text_huge"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aboutus"
                />
        </LinearLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
          
            android:background="@color/line"
            />
    </LinearLayout>
     
</LinearLayout>
</ScrollView>
</LinearLayout>