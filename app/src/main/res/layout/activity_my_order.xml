<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gray_light"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.jetcloud.hgbw.activity.MyOrderActivity">

    <include layout="@layout/top_bar"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="8dp"
          android:background="@color/line"/>
    <RadioGroup
        android:id="@+id/rdo_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_takefood"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawablePadding="3dp"
            android:text="全部订单"
            android:background="@drawable/rdo_btn_bg"
            android:textColor="@drawable/rdo_btn_text_color"
            android:textSize="18sp"
            />
        <View android:layout_width="1dp"
              android:layout_height="wrap_content"
              android:background="@color/line"/>
        <RadioButton
            android:id="@+id/rb_tak3efood"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawablePadding="3dp"
            android:text="待取餐"
            android:background="@drawable/rdo_btn_bg"
            android:textColor="@drawable/rdo_btn_text_color"
            android:textSize="18sp"
            />
        <View android:layout_width="1dp"
              android:layout_height="wrap_content"
              android:background="@color/line"/>
        <RadioButton
            android:id="@+id/rb_3od"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawablePadding="3dp"
            android:text="待支付"
            android:background="@drawable/rdo_btn_bg"
            android:textColor="@drawable/rdo_btn_text_color"
            android:textSize="18sp"
            />
    </RadioGroup>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/line"/>
    <ExpandableListView
        android:id="@+id/elv_order_all"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
</LinearLayout>
