<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.jetcloud.hgbw.activity.BindingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_light"
        android:orientation="vertical" >

        <include layout="@layout/top_bar" />

        <View
            style="@style/lineView"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                style="@style/MyTextView2"
                android:layout_centerVertical="true"
                android:text="禾谷百味账号"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_myaccount"
                android:layout_centerVertical="true"
                style="@style/MyTextView2"
                android:layout_marginLeft="90dp"
                android:textColor="@color/gray"
                tools:text="13340902246"
                android:singleLine="true" />

            <View
                style="@style/lineView"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_light" />
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_btn_ok"
            style="@style/TextViewButton"
            android:background="@drawable/next_btn_ok"
            android:text="下一步"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
