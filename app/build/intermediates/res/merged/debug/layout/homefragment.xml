<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.jetcloud.hgbw.view.ImageCycleView
                android:id="@+id/binner"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/click_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp" >

                    <ImageView
                        android:id="@+id/homeimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:src="@drawable/newfood" />

                    <TextView
                        android:id="@+id/hometxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="新品"
                        android:textColor="@color/bottom_nav_text_color"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/takefood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/click_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp" >

                    <ImageView
                        android:id="@+id/takefoodimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:src="@drawable/hot" />

                    <TextView
                        android:id="@+id/takefoodtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热卖"
                        android:textColor="@color/bottom_nav_text_color"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shopcar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/click_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp" >

                    <ImageView
                        android:id="@+id/shopcarimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:src="@drawable/groupfood" />

                    <TextView
                        android:id="@+id/shopcartxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="套餐"
                        android:textColor="@color/bottom_nav_text_color"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/click_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp" >

                    <ImageView
                        android:id="@+id/mineimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:src="@drawable/drink" />

                    <TextView
                        android:id="@+id/minetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="饮品"
                        android:textColor="@color/bottom_nav_text_color"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <com.jetcloud.hgbw.view.MyListView
                android:id="@+id/lv_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/line"
                android:dividerHeight="1dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_h"
        android:layout_alignParentTop="true"
        android:background="#c8ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dingwei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="北京"
            android:textColor="@color/black"
            android:textSize="@dimen/text_huge" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xiala" />

        <LinearLayout
            
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="10dp"
            android:background="@drawable/search_bg"
            android:orientation="horizontal" >

            <!--<EditText-->
               <!---->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@null"-->
                <!--android:hint="请输入食物或地名"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:textSize="@dimen/text_big" />-->
            <TextView
                android:id="@+id/tv_top_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="请输入食物或地名"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:textSize="@dimen/text_big"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/sousuo" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>